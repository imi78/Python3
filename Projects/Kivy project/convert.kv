#: import utils kivy.utils  

<Grid> 
  canvas.before:
    Rectangle:
      pos: self.pos
      size: self.size
      source: "images/image.jpg"  # put full path if image is located elsewhere

  fromCurr: from_currency  # refers to the id
  toCurr: to_currency 
  amount: amount
    
  GridLayout:  # 
    cols:1
    size: root.width, root.height
    pos: 10, 10
    spacing: 20
    padding: 50

    # Currency converter title
    GridLayout:
      cols:1
      
      Label:
        text: "Currency converter"
        color: 1, 1, 0, 1
        size_hint: (0.1, 0.3)
        pos_hint: {'center_x': 0.5}

    # 1st drop down menu
    GridLayout:
      cols:2
      Image:
        source: 'images/currency.jpg'
        allow_stretch: True
        keep_ratio: True
        size_hint: (0.2, 0.3)
        pos_hint: {'center_x': 0.5}
        size: self.texture_size
      
      Spinner:
        id: from_currency
        text: "From currency"
        size_hint: (0.9, 0.3)
        pos_hint: {'center_x': 0.5}
        values: root.lst_of_currencies
        
    # 2nd drop down menu
    GridLayout:
      cols:2
      Image:
        source: 'images/currency.jpg'
        allow_stretch: True
        keep_ratio: True
        size_hint: (0.2, 0.3)
        pos_hint: {'center_x': 0.5}
        size: self.texture_size

      Spinner:
        id: to_currency
        text: "To currency"
        size_hint: (0.9, 0.3)
        pos_hint: {'center_x': 0.5}
        values: root.lst_of_currencies

    # amount placeholder
    GridLayout:
      cols:2

      Image:
        source: 'images/amount.jpg'  # needs to be cleared
        allow_stretch: True
        keep_ratio: True
        size_hint: (0.2, 0.3)
        pos_hint: {'center_x': 0.5}
        size: self.texture_size

      TextInput:
        id: amount
        multiline: False

    # placeholder for the conversion result
    GridLayout:
      cols:1
      Label:
        text: root.result
        color: 1, 1, 0, 1
        size_hint: (0.1, 0.3)
        pos_hint: {'center_x': 0.5}

    # convert button
    GridLayout:
      cols:3
      Button:
        text: "Convert"
        size_hint: (0.9, 0.3)
        pos_hint: {'center_x': 0.5}
        on_press: root.btn()

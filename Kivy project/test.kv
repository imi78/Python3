MDScreen:

    MDDropDownItem:
        id: dropdown_item
        text: 'Item 0'
        pos_hint: {'center_x': .5, 'center_y': .6}
        current_item: 'Item 0'
        on_release: app.menu.open()

    MDRaisedButton:
        pos_hint: {'center_x': .5, 'center_y': .3}
        text: 'Check Item'
        on_release: toast(dropdown_item.current_item)



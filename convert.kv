#: import utils kivy.utils

<Grid> 
  fromCurr: from_currency  # refers to the id
  toCurr: to_currency 
  amount: amount
  GridLayout:  # the whole frame
    cols:1
    size: root.width -20, root.height -20
    pos: 10, 10
    spacing: 20
    padding: 50
    
    GridLayout: # first grid before buttons
      cols:1
      
      Label:
        text: "Currency converter"
        size_hint: (0.1, 0.3)
        pos_hint: {'center_x': 0.5}

    GridLayout:
      cols:1
      Button:
        id: from_currency
        text: "From currency"
        size_hint: (0.9, 0.3)
        pos_hint: {'center_x': 0.5}

    GridLayout:
      cols:1
      Button:
        id: to_currency
        text: "To currency"
        size_hint: (0.9, 0.3)
        pos_hint: {'center_x': 0.5}

    GridLayout:  # should be text filed
      cols:2

      Label:
        text: "Amount"
        size_hint: (0.2, 0.3)
        pos_hint: {'center_x': 0.5}

      TextInput:
        id: amount
        multiline: False

    GridLayout:  # placeholder for the conversion result
      cols:3

    GridLayout:  # convert button
      cols:3
      Button:
        text: "Convert"
        size_hint: (0.9, 0.3)
        pos_hint: {'center_x': 0.5}
        on_press: root.btn()

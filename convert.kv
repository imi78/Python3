#: import utils kivy.utils

<Grid>

  fromCurr: from_currency  # refers to the id
  toCurr: to_currency

  GridLayout:
    cols:1
    size: root.width -20, root.height -20
    pos: 10, 10

    GridLayout:
      cols:2
    
      Label:
        text: "From currency: "
      TextInput:
        id: from_currency
        multiline:False
        size_hint: (10, 10)
        background_normal: ""
        background_color: utils.get_color_from_hex('#eefa00')

      Label:
        text: "To currency: "
        size_hint: (10, 10)
      TextInput:
        id: to_currency
        multiline:False
        size_hint: (10, 10)

    Button:
      orientation: "horizontal"
      size_hint: (0.3, 0.3)
      text: "Submit"
      background_normal: ""
      background_color: utils.get_color_from_hex('#fa00df')
      on_press: root.btn()
